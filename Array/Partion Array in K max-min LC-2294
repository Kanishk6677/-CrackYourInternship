class Solution {
public:
    int partitionArray(vector<int>& nums, int k) {
        sort(nums.begin(),nums.end());
     int mn=nums[0];
        int res=1;
        int mx=nums[0];
        for(auto i:nums)
        {
            mn=min(i,mn);
            mx=max(i,mx);
            if(mx-mn>k)
            {
                res+=1;
                mn=mx=i;
            }
        }
        return res;
    }
};
